<AppGrid>
    cols: 1
    size: root.width, root.height

    # Python attribute: kv id
    inputs: inputs

    InputGrid
        cols: 2
        id: inputs

        # Python attribute: kv id
        first_name: first
        last_name: last
        email: email

        Label:
            text: "First Name"
        TextInput:
            id: first
            multiline: "False"
        Label:
            text: "Last Name"
        TextInput:
            id: last
            multiline: "False"
        Label:
            text: "Email"
        TextInput:
            id: email
            multiline: "False"

    Button:
        on_press: root._pressed_button_handler()
        text: "Submit"